{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create resource group",
            "type": "shell",
            "command": "az",
            "hide": true,
            "args": [
                "group",
                "create",
                "--name",
                "'${input:resourceGroupName}'",
                "--location",
                "'${input:resourceGroupLocation}'"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "generate azuredeploy.json",
            "type": "shell",
            "command": "az",
            "args": [
                "bicep",
                "build",
                "--file",
                "main.bicep",
                "--outfile",
                "azuredeploy.json"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "deploy bicep template (az)",
            "type": "shell",
            "command": "az",
            "args": [
                "deployment",
                "group",
                "create",
                "--resource-group",
                "'${input:resourceGroupName}'",
                "--name",
                "sharepoint-avm",
                "--parameters",
                "main.bicepparam",
                "adminPassword='${input:accountsPassword}'",
                "otherAccountsPassword='${input:accountsPassword}'"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            },
            "problemMatcher": [],
            "dependsOn": [
                "create resource group"
            ],
        },
        {
            "label": "deploy bicep template (PowerShell)",
            "type": "shell",
            "hide": true,
            "command": "New-AzDeployment",
            "args": [
                "-Name",
                "sharepoint-avm",
                "-Location",
                "francecentral",
                "-TemplateParameterFile",
                "main.bicepparam",
                "-resourceGroupName",
                "'${input:resourceGroupName}'",
                "-adminPassword",
                "'${input:accountsPassword}'",
                "-otherAccountsPassword",
                "'${input:accountsPassword}'"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "deploy bicep template (script)",
            "type": "shell",
            "command": "${workspaceFolder}/DeployTemplate.ps1",
            "args": [
                "-resourceGroupName",
                "${input:resourceGroupName}",
                "-resourceGroupLocation",
                "${input:resourceGroupLocation}",
                "-password",
                "'${input:accountsPassword}'"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "generate all dsc archives",
            "type": "shell",
            "command": "${workspaceFolder}/Generate-DSCArchive.ps1",
            "args": [
                "-vmName",
                "*",
                "-dscFolderRelativePath",
                "'${workspaceFolder}\\dsc'"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "generate specified dsc archives",
            "type": "shell",
            "command": "${workspaceFolder}/Generate-DSCArchive.ps1",
            "args": [
                "-vmName",
                "${input:vmName}",
                "-dscFolderRelativePath",
                "'${workspaceFolder}\\dsc'"
            ],
            "problemMatcher": []
        },
        {
            "label": "remove resource group",
            "type": "shell",
            "command": "az",
            "args": [
                "group",
                "delete",
                "--name",
                "${input:resourceGroupName}",
                "--force-deletion-types",
                "Microsoft.Compute/virtualMachines",
                "--yes"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "vmName",
            "description": "Name of the virtual machine.",
            "default": "SPSE"
        },
        {
            "type": "promptString",
            "id": "resourceGroupName",
            "description": "Name of the resource group."
        },
        {
            "type": "promptString",
            "id": "resourceGroupLocation",
            "description": "Location of the resource group.",
            "default": "france central"
        },
        {
            "type": "promptString",
            "id": "accountsPassword",
            "description": "The password for all the accouts. It requires at least 8 characters.",
            "password": true
        }
    ]
}